@page "/routines/add"
@inherits AppComponentBase

<PageTitle>Add Routine</PageTitle>

<h1>Add Routine</h1>

<EditForm Model="AddRoutineRequest" OnValidSubmit="OnValidSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />

	<div class="mb-3">
		<label for="name" class="form-label">Name</label>
		<InputText id="name" class="form-control" @bind-Value="AddRoutineRequest.Name" />
	</div>

	<button class="btn btn-primary" type="submit">Add Routine</button>

</EditForm>
