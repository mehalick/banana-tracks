@page "/routines/list"
@inherits AppComponentBase

<PageTitle>Routines</PageTitle>

<h1>Routines</h1>

<Loading IsLoading="_response is null">

	<ul class="link-list">
		<li><a href="/routines/add">Add Routine</a></li>
	</ul>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Activities</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var routine in _response!.Routines)
			{
				<tr>
					<td>@routine.Name</td>
					<td>
						<ul>
							@foreach (var i in routine.Activities)
							{
								<li>@i.Name</li>
							}
						</ul>
					</td>
					<td class="fit-cell">
						<a href="/routines/@routine.RoutineId/delete">Delete</a>
					</td>
					<td class="fit-cell">
						<a href="/routines/@routine.RoutineId/start" class="btn btn-light">Start &rsaquo;</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</Loading>
