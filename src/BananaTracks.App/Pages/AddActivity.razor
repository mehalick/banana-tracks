@page "/activities/add"
@inherits AppComponentBase

<PageTitle>Add Activity</PageTitle>

<h1>Add Activity</h1>

<EditForm Model="AddActivityRequest" OnValidSubmit="OnValidSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />

	<div class="mb-3">
		<label for="name" class="form-label">Name</label>
		<InputText id="name" class="form-control" @bind-Value="AddActivityRequest.Name" />
	</div>

	<button type="submit" class="btn btn-primary">Add Activity</button>

</EditForm>
