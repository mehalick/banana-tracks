@page "/activities/{ActivityId}/update"
@inherits AppComponentBase

<PageTitle>Update Activity</PageTitle>

<h1>Update Activity</h1>

<Loading IsLoading="_updateActivityRequest is null">
	<EditForm Model="_updateActivityRequest" OnValidSubmit="OnValidSubmit">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<div class="mb-3">
			<label for="name" class="form-label">Name</label>
			<InputText id="name" class="form-control" @bind-Value="_updateActivityRequest!.Name" />
		</div>

		<button type="submit" class="btn btn-primary">Save</button>

	</EditForm>
</Loading>
