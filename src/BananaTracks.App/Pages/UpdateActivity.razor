@page "/activities/{ActivityId}/update"
@inherits AppComponentBase

<Header Title="Update Activity"></Header>

<Page IsLoading="_updateActivityRequest is null">
	<EditForm Model="_updateActivityRequest" OnValidSubmit="OnValidSubmit">
		
		<DataAnnotationsValidator />

		<InputGroupText Label="Name" @bind-Value="@_updateActivityRequest!.Name" For="() => _updateActivityRequest!.Name" />

		<div class="hstack gap-3">
			<button type="submit" class="btn btn-primary">Save</button>
			<a href="/activities/@_updateActivityRequest!.ActivityId/delete" class="btn btn-danger">Delete &rsaquo;</a>
		</div>

	</EditForm>
</Page>
