@page "/routines/create"
@inherits AppComponentBase

<Page Title="Create Routine">
	<EditForm Model="_createRoutineRequest" OnValidSubmit="OnValidSubmit">
		
		<DataAnnotationsValidator />

		<InputGroupText Label="Name" @bind-Value="@_createRoutineRequest!.Name" For="() => _createRoutineRequest!.Name" />
		
		<button type="submit" class="btn btn-primary">Save and Continue &rsaquo;</button>

	</EditForm>
</Page>
